<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.ActivitySignUp">

    <data>
        <variable
            name="viewModel"
            type="com.goodwiil.goodwillvoice.viewModel.SignUpViewModel" />
        <variable
            name="model"
            type="com.goodwiil.goodwillvoice.model.User" />
    </data>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원등록을 위해 아래 정보를 입력해주세요."
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 등록"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <Spinner
            android:id="@+id/year_spinner"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:entries="@array/출생년도"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.222" />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:entries="@array/성별"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319" />

        <Spinner
            android:id="@+id/career_spinner"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:entries="@array/직업"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.416" />

        <TextView
            android:id="@+id/cityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거주 지역"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.531" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityView"
            app:layout_constraintVertical_bias="0.304">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/city_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울" />

                <Button
                    android:id="@+id/city_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인천" />

                <Button
                    android:id="@+id/city_btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경상, 대구, 울산" />

                <Button
                    android:id="@+id/city_btn7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강원" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/city_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="경기도" />

                <Button
                    android:id="@+id/city_btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부산" />

                <Button
                    android:id="@+id/city_btn6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="대전, 충청" />

                <Button
                    android:id="@+id/city_btn8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="광주, 전라, 제주" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록하기"
            android:onClick="@{() -> viewModel.signUpBtnClick(signUpBtn,cl)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="1.0" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

